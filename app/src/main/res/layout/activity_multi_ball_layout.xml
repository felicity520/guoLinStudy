        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:src="@drawable/ic_basketball" />

    <ImageView
        android:id="@+id/ball3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:src="@drawable/ic_basketball" />

    <ImageView
        android:id="@+id/ball4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:src="@drawable/ic_basketball" />

    <ImageView
        android:id="@+id/ball5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:src="@drawable/ic_basketball" />
</androidx.constraintlayout.motion.widget.MotionLayout>